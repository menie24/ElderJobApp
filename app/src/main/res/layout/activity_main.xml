<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sniglet"
        android:text="ELDER JOB"
        android:textColor="#4C75C5"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobImageView" />

    <ImageView
        android:id="@+id/jobImageView"
        android:layout_width="307dp"
        android:layout_height="315dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/job" />

    <TextView
        android:id="@+id/describeTextView"
        android:layout_width="337dp"
        android:layout_height="105dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sniglet"
        android:text="  งานที่เหมาะสมสำหรับผู้สูงวัยและแรงงานที่มีประสบการณ์สำหรับธุรกิจของคุณ"
        android:textColor="#49454F"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameTextView" />

    <Button
        android:id="@+id/findJobButton"
        android:layout_width="183dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/primary_btn"
        android:text="หางาน"
        android:textColor="#FEFEFE"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/describeTextView" />

    <Button
        android:id="@+id/giveJobButton"
        android:layout_width="183dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/primary_btn"
        android:text="ให้งาน"
        android:textColor="#FEFEFE"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findJobButton" />

</androidx.constraintlayout.widget.ConstraintLayout>